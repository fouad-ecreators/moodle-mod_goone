
<div class="container">
      

  <div class="card mx-auto" style="max-width:500px;margin:auto;">		  
  	<img class="card-img-top" style="max-height:300px;" src="{{image}}" alt="Card image cap">
  	<div class="card-body bg-light">
    <h3 class="card-title">{{title}}</h3>
    <p class="badge badge-black mr-1 m-0" style="text-transform:uppercase;">{{type}}</p>
    <em class="text-muted">{{#provider}}{{name}}{{/provider}}</em></br>
   {{#delivery}}{{#duration}} <i class="fa fa-clock-o mr-1"></i><em>{{duration}}</em>{{/duration}}{{/delivery}}
    </div>		
  </div>
</div>






<div class="container">
	<div class="row">
		<div class="col-md-12">
			<ul class="nav nav-underline">
				<li class="primary-tab primary-tab-border active">
					<h3 class="panel-title">Overview</h3>
				</li>
			</ul>
			<div class="text-expanded">
				{{{description}}}
			</div>
		</div>
	</div>
</div>




{{#has_items}}<div class="container">
	<div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Learning</h3>
        </div>
{{#items}}
<div class="container mb-3">
        <ul class="list-group">
            <li class="list-group-item">
                <div class="row toggle" id="dropdown-detail-1" data-toggle="collapse">
                    <div class="col-xs-10">
                        {{title}}
                    </div>
                    <div class="col-xs-2"><i class="fa fa-chevron-down pull-right"></i></div>
                </div>
                <div id="detail-1">
                    <hr></hr>
                    <div class="container">
                        <div class="row">
                        	{{#items}}
                        	<div class="container">

                            <div class="row-xs-6">
                                {{title}}
                            </div>
                                                        <div class="small row-xs-5 text-muted md-2" style="text-transform:uppercase;">
                                {{type}}
                            </div>
                        </div>

                           {{/items}}
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>
				{{/items}}
				{{/has_items}}

			</div>
		</div>
	</div>
</div>

<script>
    $(document).ready(function() {
        $('#lospinny').hide();
    });
</script>

